{
  "name": "quark-crm",
  "version": "1.0.0",
  "description": "Quark CRM",
  "main": "dist/main.js",
  "scripts": {
    "nodemon": "nodemon",
    "app": "electron .",
    "start": "npm run compile && electron --trace-warnings .",
    "svelte:dev": "cd svelte && npm run dev",
    "svelte:build": "cd svelte && npm run build",
    "compile": "tsc && copyfiles -u 1 electron/*.png dist",
    "out:win": "npm run svelte:build && npm run compile && electron-builder build --win --publish never",
    "publish:win": "npm run svelte:build && npm run compile && electron-builder build --win --publish always"
  },
  "author": "Travja",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "electron-fetch": "^1.9.1",
    "electron-serve": "^2.0.0",
    "electron-updater": "^6.2.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "build": {
    "appId": "memento-ket",
    "directories": {
      "output": "out"
    },
    "disabled-publish": [
      {
        "provider": "github",
        "owner": "el3um4s",
        "repo": "memento-sveltekit-electron-typescript"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "Quark",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
